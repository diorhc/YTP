{
  "name": "youtubeplus",
  "version": "2.1",
  "description": "Professional-grade YouTube enhancement userscript with modular architecture, comprehensive error handling, and automated testing",
  "private": true,
  "author": "diorhc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/diorhc/YTP.git"
  },
  "bugs": {
    "url": "https://github.com/diorhc/YTP/issues"
  },
  "homepage": "https://github.com/diorhc/YTP#readme",
  "keywords": [
    "userscript",
    "youtube",
    "greasemonkey",
    "tampermonkey",
    "browser-extension",
    "video-enhancement",
    "modular-architecture"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run build:watch",
    "build": "node build.js",
    "build:fast": "node build.js --no-eslint",
    "build:minify": "node build.js --minify",
    "build:watch": "node build.js --watch",
    "build:analyze": "npm run build && npm run benchmark",
    "lint": "eslint --no-warn-ignored \"src/**/*.js\" \"build.js\"",
    "lint:fix": "eslint --no-warn-ignored \"src/**/*.js\" \"build.js\" --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"src/**/*.js\" \"*.js\" \"!youtube.user.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"*.js\" \"!youtube.user.js\"",
    "test": "npm run lint && npm run format:check && npm run test:unit && npm run build",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:coverage": "jest --coverage",
    "test:smoke": "node test/smoke.js",
    "test:all": "npm run typecheck && npm run test",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "precommit": "lint-staged",
    "validate": "npm run typecheck && npm run lint && npm run test:unit",
    "validate:build": "node validate-build.js",
    "benchmark": "node benchmark.js",
    "clean": "node -e \"require('fs').rmSync('coverage', {recursive: true, force: true}); require('fs').rmSync('youtube.user.js', {force: true});\" && echo Cleaned build artifacts",
    "check:deps": "npm outdated || true",
    "update:deps": "npm update && npm audit fix",
    "ci": "npm run typecheck && npm run lint && npm run test:unit && npm run build"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "chokidar": "^4.0.3",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.0.0",
    "pretty-quick": "^4.2.2",
    "puppeteer": "^24.25.0",
    "terser": "^5.44.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --no-warn-ignored --fix",
      "prettier --write"
    ],
    "build.js": [
      "eslint --no-warn-ignored --fix",
      "prettier --write"
    ]
  }
}
