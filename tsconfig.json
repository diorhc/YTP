{
  "compilerOptions": {
    // Enable JavaScript sources but keep type checking opt-in via // @ts-check when ready
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    // Module resolution
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    // Type checking options (gradually enable strict mode)
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Additional checks (enabled but not blocking)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Advanced options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // JSDoc options
    "maxNodeModuleJsDepth": 1,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    // Output
    "declaration": false,
    "sourceMap": false
  },
  "include": ["src/**/*.js", "build.js", "test/**/*.js", "types/**/*.d.ts"],
  "exclude": ["node_modules", "youtube.user.js", "dist", "coverage"]
}
