{
  "compilerOptions": {
    // Enable JavaScript sources but keep type checking opt-in via // @ts-check when ready
    "allowJs": true,
    "checkJs": false, // ⚠️ Disabled for gradual adoption - enable per-file with @ts-check
    "noEmit": true,

    // Module resolution
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    // Type checking options (gradually enable strict mode)
    // Progress: Incrementally enabling strict mode checks
    "strict": false,
    "noImplicitAny": false, // ⚠️ Enable per-file with JSDoc annotations
    "strictNullChecks": false, // ⚠️ Enable after null safety audits
    "strictFunctionTypes": true,
    "strictBindCallApply": true, // ✅ Enabled for better type checking
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true, // ✅ Better error handling

    // Additional checks (enabled for code quality)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true, // ✅ Prevent accidental overrides

    // Advanced options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // JSDoc options for better type inference
    "maxNodeModuleJsDepth": 1,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false, // Enable after cleaning optional props

    // Output
    "declaration": false,
    "sourceMap": false,

    // Incremental compilation for better performance
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": ["src/**/*.js", "build.js", "test/**/*.js", "types/**/*.d.ts"],
  "exclude": ["node_modules", "youtube.user.js", "dist", "coverage", ".tsbuildinfo"]
}
